<script>
const c = document.getElementById("myCanvas");
const ctx = c.getContext("2d");

//cuerpo
ctx.beginPath();
ctx.rect(600, 100, 250, 300); // Coordenadas (x, y) y tamaño (ancho, alto)
ctx.fillStyle = "#FFF300";  // Color de relleno rojo
ctx.fill();
ctx.strokeStyle = "#000000";  // Color del borde negro
ctx.lineWidth = 5;  // Grosor del borde
ctx.stroke();

//ojos
ctx.beginPath();
ctx.arc(680, 180, 40, 0, 2 * Math.PI); 
ctx.strokeStyle = "black"; 
ctx.stroke();
ctx.fillStyle = "white"; 
ctx.fill();

ctx.beginPath();
ctx.arc(680, 180, 15, 0, 2 * Math.PI); 
ctx.strokeStyle = "black"; 
ctx.stroke();
ctx.fillStyle = "#00AFF0"; 
ctx.fill();

